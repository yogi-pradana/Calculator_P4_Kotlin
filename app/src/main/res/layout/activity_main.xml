<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Display Input -->
    <TextView
        android:id="@+id/displayInput"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:textSize="32sp"
        android:text="0"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textColor="@android:color/darker_gray"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/displayResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Display result -->
    <TextView
        android:id="@+id/displayResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text=""
        android:gravity="end"
        android:padding="16dp"
        android:textColor="@color/grey"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/displayInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="160dp"
        android:layout_height="7dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/grey"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/displayResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button AC -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ac"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="AC"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="5dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_percent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_percent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="%"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/btn_ac"
        app:layout_constraintEnd_toStartOf="@id/btn_divide"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_divide"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="/"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/btn_percent"
        app:layout_constraintEnd_toStartOf="@id/btn_multiply"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="x"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <!-- baris dua -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_percent"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_divide"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="+"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <!-- baris tiga -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_9"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_min"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_min"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="-"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <!-- baris empat -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_sama"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sama"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:padding="10dp"
        android:text="="
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@+id/btn_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

    <!-- baris lima -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_dot"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_default="wrap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="."
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_btn"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/btn_sama"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>
